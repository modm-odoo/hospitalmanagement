<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tree_room_view" model="ir.ui.view">
        <field name="name">hospital.room.tree</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="room_no"/>
                <field name="allot_to"/>
            </tree>
        </field>
    </record>

    <record id="form_room" model="ir.ui.view">
        <field name="name">hospital.room.form</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <form string="Hospital Management">
                <sheet>
                    <div class="oe_title mb-3">
                        <h1>
                            <label for="room_no" />
                            <field name="room_no" placeholder="Room Number"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="allot_to"/>
                        </group>
                        <group>
                            <field name="room_type"/>
                        </group>
                        <group>
                            <field name="price"/>
                        </group>
                        </group>
                    </sheet>
                    </form>
                    </field>
                    </record>

                    <record id="room_search" model="ir.ui.view">
                        <field name="name">hospital.room.search</field>
                        <field name="model">hospital.room</field>
                        <field name="arch" type="xml">
                            <search>
                                <field name="allot_to"></field>
                                <filter string="Type" name="room_type" context="{'group_by':'room_type'}"/>
                            </search>
                        </field>
                    </record>

    <record id="room_model_action" model="ir.actions.act_window">
        <field name="name">Room</field>
        <field name="res_model">hospital.room</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>